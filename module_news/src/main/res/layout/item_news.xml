<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="newsItem"
            type="com.magicalrice.adolph.lib_common.datamodel.http.entities.NewsData"/>
        <variable
            name="callback"
            type="com.magicalrice.adolph.module_news.NewsItemClickCallback"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:onClick="@{()-> callback.onClick(newsItem)}"
        android:minHeight="90dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/comment_news_bg"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:maxLines="2"
            android:text="@{newsItem.desc}"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:gravity="right|center_vertical"
            android:textColor="#ddccaa"
            android:textSize="12sp"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@{newsItem.who}"/>
    </android.support.v7.widget.CardView>
</layout>